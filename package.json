{
  "name": "finley-design-system-manager",
  "version": "1.0.0",
  "description": "Figma plugin for importing design tokens and generating themed screens",
  "scripts": {
    "build": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2017 && cp src/ui.html dist/ui.html",
    "watch": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2017 --watch"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.98.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}
